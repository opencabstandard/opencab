<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eleostech.opencabprovider">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.eleostech.exampleprovider.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.eleostech.exampleprovider.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <data
                    android:host="com.eleostech.opencabprovider"
                    android:pathPattern="/hos"
                    android:scheme="hos" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <provider android:authorities="org.opencabstandard.hos;com.example.fastpass"
            android:exported="true"
            android:label="HOS"
            android:name="com.eleostech.exampleprovider.HOSProvider">
        </provider>

        <provider android:authorities="org.opencabstandard.identity;com.example.identity"
            android:exported="true"
            android:label="identity"
            android:name="com.eleostech.exampleprovider.IdentityProvider">
        </provider>
    </application>

</manifest>